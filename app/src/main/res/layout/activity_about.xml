<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AboutActivity">
    
    <ImageView
            android:src="@drawable/about_us"
            android:layout_margin="25dp"
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:layout_height="200dp"/>

    <View
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="2dp"
            android:background="@color/colorPrimary"/>
    
    <TextView
            android:text="This app is developed by Institute MobOps Team."
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:text="All rights are reserved."
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:text="Created by Om Shri Prasath, S Jeeva"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <View
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_height="2dp"
            android:background="@color/colorPrimary"/>

    <TextView
            android:text="Interested in app development? Drop us a mail at"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:text="institutewebops@gmail.com"
            android:autoLink="email"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


</LinearLayout>